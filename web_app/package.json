  "version": "0.0.0",
  "scripts": {
    "postinstall": "npm run build:protos",
    "vite": "vite",
    "dev": "esbuild --outdir=. src/main.tsx --tsconfig=tsconfig.json --bundle --sourcemap --minify --loader:.bin=binary --servedir=.",
